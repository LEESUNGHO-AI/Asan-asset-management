{
  "name": "asan-asset-management",
  "version": "4.0.0",
  "description": "아산시 스마트시티 자산관리 대시보드 - Slack ↔ Notion ↔ GitHub 자동 연동",
  "main": "scripts/sync-notion-data.js",
  "scripts": {
    "sync": "node scripts/sync-notion-data.js",
    "update": "node scripts/update-dashboard.js",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "watch:css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build": "npm run build:css && npm run sync && npm run update",
    "dev": "npm run watch:css"
  },
  "keywords": [
    "asan",
    "smart-city",
    "asset-management",
    "notion",
    "slack",
    "dashboard"
  ],
  "author": "Danny (제일엔지니어링 PMO)",
  "license": "MIT",
  "dependencies": {
    "@notionhq/client": "^2.2.14",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "tailwindcss": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
